<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fei.springcloud.provider8882.dao.ApiNodesMapper">

    <resultMap type="com.fei.springcloud.domain.NodesVo" id="nodesMap">
        <result property="id" column="id"/>
        <result property="userid" column="userid"/>
        <result property="telephone" column="telephone"/>
        <result property="title" column="title"/>
        <result property="subtitle" column="subTitle"/>
        <result property="date" column="date"/>
        <result property="foruser" column="forUser"/>
        <result property="type" column="type"/>
        <result property="templete" column="templete"/>
        <result property="titleimage" column="titleImage"/>
        <result property="isshow" column="isShow"/>
        <result property="istop" column="isTop"/>
        <result property="ext1" column="ext1"/>
